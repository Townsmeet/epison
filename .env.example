# Database
NUXT_TURSO_DATABASE_URL=your_turso_database_url_here
NUXT_TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Payment (Paystack)
NUXT_PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
NUXT_PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here

# Email (Brevo)
NUXT_BREVO_API_KEY=your_brevo_api_key_here

# Site URL (for password reset emails)
NUXT_PUBLIC_SITE_URL=http://localhost:3000

# Object Storage (S3-compatible)
# Required for server-side uploads or signed URLs
NUXT_S3_ACCESS_KEY_ID=your_aws_access_key_id
NUXT_S3_SECRET_ACCESS_KEY=your_aws_secret_access_key
NUXT_S3_REGION=your_region
NUXT_S3_BUCKET=your_bucket_name

# Optional (for S3-compatible providers like MinIO, Cloudflare R2, Wasabi)
NUXT_S3_ENDPOINT=https://s3.your-provider.com
NUXT_S3_FORCE_PATH_STYLE=false

# Optional public base URL (CDN or bucket website) used to render public asset URLs on the client
NUXT_S3_PUBLIC_BASE_URL=https://cdn.your-domain.com
